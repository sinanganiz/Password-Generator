  <!-- Modal Structure -->
  <div id="saveModal" class="modal">
  
    <form method="GET" action="">
      <div class="modal-content">
      <h4>Save Password</h4>
      <br>
        <label style="font-weight: 500; font-size: 1rem !important; color: #5a5a5a !important;" for="passTitle">Write a Title for This Password</label>
        <input id="passTitle" name="passTitle" type="text" placeholder="Write a title ...">
        <input id="rpassword" name="rpassword" type="hidden" value="{{Password}}" >
    </div>
    <div class="modal-footer">

              {% comment %} <a href="savePassword/44" style="padding: 10px; cursor: pointer; border-radius: 5%; font-weight: 500; letter-spacing: 1px;" class="modal-close waves-effect waves-green blue darken-3 blue-text text-lighten-5">Save Password</a> {% endcomment %}

